<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.davizn.model.interfaces.UserStrgDAO">

	<!-- 저장소 추가 -->
 	<insert id="addStorage">
		insert into userstrg values(userstrg_seq.nextval,'${param1}','${param2}',sysdate)
	</insert>
	  
	<!-- 저장소 이름 변경 -->
	 <update id="modifyStorageName" parameterType="kr.or.davizn.model.dto.UserStrgDTO">
		update userstrg set strgseq=#{strgseq}, strgname=#{strgname}
	</update> 
	
	
	<!-- 저장소 리스트 출력 -->
	<select id="showStorageList" parameterType="String" resultType="kr.or.davizn.model.dto.UserStrgDTO">
		select * from userstrg where userid=#{userid} order by strgseq
	</select>
</mapper>